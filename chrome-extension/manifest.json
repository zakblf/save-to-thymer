{
    "manifest_version": 3,
    "name": "Save to Thymer",
    "version": "1.0.0",
    "description": "Save web pages to Thymer collections with custom templates and property mapping",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*.thymer.com/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/save-to-thymer-16.png",
            "48": "icons/save-to-thymer-48.png",
            "128": "icons/save-to-thymer-128.png"
        }
    },
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "https://*.thymer.com/*"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*.thymer.com/*"
            ],
            "js": [
                "content/thymer-bridge.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "_execute_action": {
            "description": "Open Save to Thymer"
        },
        "quick_save": {
            "suggested_key": {
                "default": "Alt+Shift+S",
                "mac": "Option+Shift+S"
            },
            "description": "Quick save to Thymer"
        }
    },
    "icons": {
        "16": "icons/save-to-thymer-16.png",
        "48": "icons/save-to-thymer-48.png",
        "128": "icons/save-to-thymer-128.png"
    }
}